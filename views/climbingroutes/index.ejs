<%- include ('../partials/header') %>


<div class="container my-5">
  <header>
    <h1>Climbing Route Reviews</h1>
    <form class="mx-9" action="/climbingroutes" method="GET">

      <div class="form-row">
        <div class="form-group d-inline-flex p-2 mb-0">Search: </div>

        <div class="form-group col-md-2 mb-0">
          <select name="location" class="form-control">
            <option value="0" <%= formData.location === '0' ? 'selected' : null %>> - Location - </option>
            <option value="Wall A" <%= formData.location === 'Wall A' ? 'selected' : null %>> Wall A </option>
            <option value="Wall B" <%= formData.location === 'Wall B' ? 'selected' : null %>> Wall B </option>
            <option value="Wall C" <%= formData.location === 'Wall C' ? 'selected' : null %>> Wall C </option>
            <option value="Wall D" <%= formData.location === 'Wall D' ? 'selected' : null %>> Wall D </option>
          </select>
        </div>

        <div class="form-group col-md-2 mb-0">
          <select name="color" class="form-control">
            <option value="0" <%= formData.color === '0' ? 'selected' : null %>> - Color - </option>
            <option value="Blue" <%= formData.color === 'Blue' ? 'selected' : null %>> Blue </option>
            <option value="Red" <%= formData.color === 'Red' ? 'selected' : null %>> Red </option>
            <option value="Green" <%= formData.color === 'Green' ? 'selected' : null %>> Green </option>
            <option value="Black" <%= formData.color === 'Black' ? 'selected' : null %>> Black </option>
          </select>
        </div>

        <div class="form-group col-md-2 mb-0">
          <select name="review" class="form-control">
            <option value="0" <%= formData.review === 0 ? 'selected' : null %>> - Review - </option>
            <option value="1" <%= formData.review === 1 ? 'selected' : null %>> 1 </option>
            <option value="2" <%= formData.review === 2 ? 'selected' : null %>> 2 </option>
            <option value="3" <%= formData.review === 3 ? 'selected' : null %>> 3 </option>
            <option value="4" <%= formData.review === 4 ? 'selected' : null %>> 4 </option>
            <option value="5" <%= formData.review === 5 ? 'selected' : null %>> 5 </option>
          </select>
        </div>

        <div class="form-group col-md-2 mb-0">
          <input type="text" name="difficulty" class="form-control" value="<%= formData.difficulty%>"
            placeholder="Difficulty">
        </div>

        <div class="form-group mb-0">
          <button type="submit" class="btn btn-dark">Submit</button>
        </div>

      </div>
    </form>

  </header>



  <hr>
  <div class="row">
    <% for (let climbingroute of climbingroutes) { %>
      
    <div class="col-sm-4">
      <div class="card mb-3">

        <div class="card-header  clearfix">
          <div class="float-left">
            <h5 class="card-title my-0"><%= climbingroute.title %></h5>
          </div>
          <div class="float-right">
            <small class="text-secondary"><%= climbingroute.updatedAt.toLocaleString("en-CA") %></small>
          </div>
        </div>

        <div class="card-body">
          <h6 class="card-title text-info font-weight-bold">Review: <%= climbingroute.review %></h6>
          <p class="card-subtitle"><%= climbingroute.synopsis %></p>
          <p class="card-text text-muted my-2"><small>By: <%= climbingroute.user.fullname %></small></p>
        </div>

        <div class="card-footer py-1 clearfix">
          <div class="float-left">
            <a href="/climbingroutes/<%= climbingroute.id %>">Read More</a>
          </div>
          <% if (authorized && (climbingroute.user.email === user.email)) { %>
          <div class="float-right">
            <a href="/climbingroutes/<%= climbingroute.id %>/edit">
              <i class="fa fa-edit"></i>
            </a>
            &nbsp;/&nbsp;
            <form class="form-inline my-0" action="/climbingroutes/delete" method="post"
              onsubmit="return confirm('Are you sure you want to delete all your hard work?');">
              <input type="hidden" value="<%= climbingroute.id %>" name="id">
              <button class="delete" type="submit">
                <i class="fa fa-trash"></i>
              </button>
            </form>
          </div>
          <% } %>
        </div>

      </div>
    </div>
    <% } %>
  </div>
</div>

<%- include ('../partials/footer') %>
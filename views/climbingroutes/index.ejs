<%- include ('../partials/header') %>

<div class="container my-5">
  <header>
    <h1>Climbing Route Reviews</h1>
  </header>
  <hr>
  <div class="content">
    <% for (let climbingroute of climbingroutes) { %>
      <div class="card my-3">

        <div class="card-header clearfix">
          <div class=" float-left">
            <h5 class="card-title"><%= climbingroute.title %></h5>            
            <h6>Review: <%= climbingroute.review %></h6>
          </div>
          <div class="float-right">
            <small><%= climbingroute.updatedAt %></small>
          </div>
        </div>

        <div class="card-body">          
          <p class="card-text">
            <%= climbingroute.synopsis %>
            <small>By: <%= climbingroute.user.fullname %></small>    
          </p>
          <a href="/climbingroutes/<%= climbingroute.id %>">more...</a>
        </div>

        <% if (authorized && (climbingroute.user.email === user.email)) { %>
          <div class="card-footer">
            <a href="/climbingroutes/<%= climbingroute.id %>/edit">
              <i class="fa fa-edit"></i>
            </a>
            &nbsp;/&nbsp;
            <form class="form-inline" action="/climbingroutes/delete" method="post" onsubmit="return confirm('Are you sure you want to delete all your hard work?');">
              <input type="hidden" value="<%= climbingroute.id %>" name="id">
              <button class="delete" type="submit">
                <i class="fa fa-trash"></i>
              </button>
            </form>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
</div>

<%- include ('../partials/footer') %>
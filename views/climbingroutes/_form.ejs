<!--
  Step 1: The form must be sharable between the new and edit views.
-->

<form action="<%= (typeof actionPath === 'undefined') ? '/climbingroutes' : actionPath  %>" , method="POST">
  <%= console.log(JSON.stringify(formData, null, 2))%>
  
  <% if(typeof actionPath !== 'undefined') { %>
      <input type="hidden" name="id" value="<%= formData.id %>">
  <% } %>
      <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title" class="form-control" value="<%= formData.title%>">
          <div class="form-group">
              <label for="content">Content</label>
              <textarea name="content" class="form-control summernote">
                  <%= formData.content%>
              </textarea>
              <div class="form-group">
                  <label for="status">Status</label>
                  <select name="status" class="form-control">
                      <option value="DRAFT">Draft</option>
                      <option value="PUBLISHED" <%= formData.status === 'PUBLISHED' ? 'selected' : null %> > Published </option>
                  </select>
              </div>
  
              <div class="form-group">
                  <button class="btn btn-dark">Submit</button>
              </div>
          </div>
      </div>
  </form>